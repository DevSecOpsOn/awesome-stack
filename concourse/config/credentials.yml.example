# Concourse Pipeline Credentials Template
# Copy this file to credentials.yml and fill in your values
# IMPORTANT: Add credentials.yml to .gitignore

# Slack Webhook URL (required)
# Get this from: https://api.slack.com/messaging/webhooks
slack-webhook-url: https://hooks.slack.com/services/TXXXXXXXX/BXXXXXXXX/XXXXXXXXXXXXXXXXXXXXXXXX

# Git Repository (if using private repos)
git-private-key: |
  -----BEGIN RSA PRIVATE KEY-----
  YOUR_PRIVATE_KEY_HERE
  -----END RSA PRIVATE KEY-----

# Docker Registry (if pushing images)
docker-username: your-docker-username
docker-password: your-docker-password

# Additional secrets as needed
# aws-access-key-id: YOUR_AWS_ACCESS_KEY
# aws-secret-access-key: YOUR_AWS_SECRET_KEY
# kubernetes-token: YOUR_K8S_TOKEN
