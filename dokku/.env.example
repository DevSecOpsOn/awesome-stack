# Dokku Environment Variables
# Copy this file to .env and update the values

# Database passwords
DOKKU_POSTGRES_PASSWORD=your_secure_postgres_password_here
DOKKU_REDIS_PASSWORD=your_secure_redis_password_here

# Dokku settings
DOKKU_HOSTNAME=dokku.docker.local
DOKKU_LETSENCRYPT_EMAIL=admin@yourdomain.com

# Optional: Custom domain
# DOKKU_CUSTOM_DOMAIN=your-custom-domain.com

# Optional: SSL settings
# DOKKU_LETSENCRYPT_SERVER=https://acme-v02.api.letsencrypt.org/directory

# Optional: Git settings
# DOKKU_GIT_REV=HEAD

# Optional: Resource limits
# DOKKU_MEMORY_LIMIT=512m
# DOKKU_CPU_LIMIT=1.0
